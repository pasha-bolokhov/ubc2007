\newcommand{\HarvFrame}[1]{

  \psframe[linestyle=none,fillstyle=gradient,	% full background
	gradbegin=gradcolA,gradend=gradcolB](-2,-2)(12.5,9)

  \psframe[linestyle=none,fillstyle=solid,	% titlebar
	fillcolor=midnight](-.7,7.3)(12.5,8.4)

  \psframe[linestyle=none,fillstyle=solid,	% bottombar (flourish)
	fillcolor=crimson](-.4,-.7)(4.5,-1.35)

%%% dots along the bottom
  \psset{linecolor=bottomdots}
  \multirput(3,-.7)(.3,0){30}{\qdisk(0,0){1.2pt}}

%%% bubbles up left edge;  different sizes/colors
%%% multirput(-1.3,6.5)(0,.4){5}{\qdisk(0,0){2pt}}
  \psset{linecolor=bubbleA} \qdisk(-1.3,6.5){1.5pt}
  \psset{linecolor=bubbleB} \qdisk(-1.3,7.0){1.9pt}
  \psset{linecolor=bubbleC} \qdisk(-1.3,7.5){2.3pt}
  \psset{linecolor=bubbleD} \qdisk(-1.3,8.0){2.8pt}
  \psset{linecolor=bubbleE} \qdisk(-1.3,8.5){3.3pt}

  \PutLogo
{#1}}

